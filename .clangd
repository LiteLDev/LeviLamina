Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict
  Suppress:
    - "-Wmicrosoft-enum-forward-reference"
    - "-Wc++11-narrowing"
    - "-Wc++2b-extensions"
    - "-Wmicrosoft-cast"
CompileFlags:
  Add:
    - "-ferror-limit=0"
    - '-D__FUNCTION__="dummy"'
    - '-D__clangd__'
    - "-Yusrc/ll/api/Global.h"
    - "-FIsrc/ll/api/Global.h" # clangd bug can't find pch file
  Remove:
    - "/YuGlobal.h"
    - "/FIGlobal.h"
